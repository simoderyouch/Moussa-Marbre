{
    "buildCommand": "prisma generate && vite build",
    "outputDirectory": "dist",
    "framework": "vite",
    "functions": {
        "api/**/*.ts": {
            "includeFiles": "prisma/dev.db"
        }
    },
    "rewrites": [
        {
            "source": "/api/products/:path*",
            "destination": "/api/products"
        },
        {
            "source": "/api/projects",
            "destination": "/api/projects"
        },
        {
            "source": "/api/chat",
            "destination": "/api/chat"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}